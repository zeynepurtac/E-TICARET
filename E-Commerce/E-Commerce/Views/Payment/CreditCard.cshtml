<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<div>
    <span>Kredi Kartı</span>
</div>
<div class="row">
    <div class="col-75">
        <div class="container">
            <form action="/Payment/CheckOut">

                <div class="row">
                    <div class="col-50">
                        <h3>Billing Address</h3>
                        <label for="firstname"><i class="fa fa-user"></i> İsim Soyisim</label>
                        <input type="text" id="firstname" name="firstname" placeholder="İsim-Soyisim" data-val="true" data-val-required="Bu Alan Boş Geçilemez!" data-val-length="5">
                        <span class="field-validation-valid" data-valmsg-for="firstname" data-valmsg-replace="true"></span>

                        <label for="email"><i class="fa fa-envelope"></i> Email</label>
                        <input type="text" id="email" name="email" placeholder="abcd@example.com" data-val="true" data-val-required="Bu Alan Boş Geçilemez!">
                        <span class="field-validation-valid" data-valmsg-for="email" data-valmsg-replace="true"></span>

                        <label for="address"><i class="fa fa-address-card-o"></i> Adres</label>
                        <input type="text" id="address" name="address" placeholder="" data-val="true" data-val-required="Bu Alan Boş Geçilemez!">
                        <span class="field-validation-valid" data-valmsg-for="address" data-valmsg-replace="true"></span>



                    </div>

                    <div class="col-50">
                        <h3>Payment</h3>
                        <label for="fname">Accepted Cards</label>
                        <div class="icon-container">
                            <i class="fa fa-cc-visa" style="color:navy;"></i>
                            <i class="fa fa-cc-amex" style="color:blue;"></i>
                            <i class="fa fa-cc-mastercard" style="color:red;"></i>
                            <i class="fa fa-cc-discover" style="color:orange;"></i>
                        </div>
                        <label for="cardname">Kart Sahibi</label>
                        <input type="text" id="cardname" name="cardname" placeholder="John More Doe" data-val="true" data-val-required="Bu Alan Boş Geçilemez!" data-val-length="5">
                        <span class="field-validation-valid" data-valmsg-for="cardname" data-valmsg-replace="true"></span>

                        <label for="cardnumber">Kart Numarası</label>
                        <input type="text" id="cardnumber" name="cardnumber" placeholder="1111-2222-3333-4444" data-val="true" data-val-required="Bu Alan Boş Geçilemez!" data-val-number="Kart numarasını giriniz"  data-val-length-min="13"   data-val-length-max="19">
                        <span class="field-validation-valid" data-valmsg-for="cardnumber" data-valmsg-replace="true"></span>

                        <label for="expmonth">Ay</label>
                        <select id="expmonth" name="expmonth">
                            @for (byte i = 1; i < 13; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>


                        <label for="expyear">Yıl</label>
                        <select id="expyear" name="expyear">
                            @for (int i = DateTime.Now.Year; i < DateTime.Now.Year + 10; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>


                        <div class="col-50">
                            <label for="cvv">CVV</label>
                            <input type="number" id="cvv" name="cvv" placeholder="CVV" data-val="true" data-val-required="Bu Alan Boş Geçilemez!" data-val-lengt-min="3" data-val-length-max="3" data-val-number="3 Haneden kısa olamaz">
                            <span class="field-validation-valid" data-valmsg-for="cvv" data-valmsg-replace="true"></span>

                        </div>
                    </div>


                </div>
             
              
            </form> 
            <a href="~/Payment/CheckOut">  <input type="submit" value="Onay" class="btn"></a>
        </div>
    </div>

    <div class="col-25">
        <div class="container">
            <h4>
                Cart
                <span class="price" style="color:black">
                    <i class="fa fa-shopping-cart"></i>
                    <b>4</b>
                </span>
            </h4>

            <hr>
            <p>Total <span class="price" style="color:black"><b>₺</b></span></p>
        </div>
    </div>
</div>